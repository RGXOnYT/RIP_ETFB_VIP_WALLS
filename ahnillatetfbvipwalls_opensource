task.spawn(function()
    task.wait(2)
    while true do
        local msg = messages[math.random(1, #messages)]
        for i = 0, 1, 0.1 do SupportBar.TextTransparency = i task.wait(0.03) end
        SupportBar.Text = msg
        for i = 1, 0, -0.1 do SupportBar.TextTransparency = i task.wait(0.03) end
        task.wait(10)
    end
end)

-- [[ WALL DESTRUCTION LOGIC ]] --
local pathsToCheck = {
    {"DefaultMap_SharedInstances", "VIPWalls", "Shared Map"},
    {"ArcadeMap_SharedInstances", "VIPWalls", "Arcade Map"},
    {"UFOMap_SharedInstances", "VIPWalls", "UFO Map"},
    {"MoneyMap_SharedInstances", "VIPWalls", "Money Map"},
    {"NukeMap_SharedInstances", "VIPWalls", "Nuke Map"}
}

local function findAndDestroy(pathData)
    local locations = {workspace, game:GetService("ReplicatedStorage")}
    for _, root in ipairs(locations) do
        local current = root
        for i = 1, #pathData - 1 do
            if current then current = current:FindFirstChild(pathData[i]) else break end
        end
        if current then
            if current:IsA("BasePart") then current:Destroy() else
                for _, obj in ipairs(current:GetDescendants()) do if obj:IsA("BasePart") then obj:Destroy() end end
            end
            break 
        end
    end
end

DeleteButton.MouseButton1Click:Connect(function()
    DeleteButton.Text = "WIPING..."
    for _, path in ipairs(pathsToCheck) do findAndDestroy(path) end
    DeleteButton.Text = "WALLS WIPED ðŸ’€"
    task.wait(1.5)
    DeleteButton.Text = "ERASE ALL VIP WALLS"
end)

-- [[ DYNAMIC RESIZE LOGIC ]] --
local draggingResize = false
ResizeHandle.MouseButton1Down:Connect(function() draggingResize = true end)
game:GetService("UserInputService").InputChanged:Connect(function(input)
    if draggingResize and input.UserInputType == Enum.UserInputType.MouseMovement then
        local mousePos = game:GetService("UserInputService"):GetMouseLocation()
        local framePos = MainFrame.AbsolutePosition
        local newX = math.max(300, mousePos.X - framePos.X)
        local newY = math.max(150, mousePos.Y - framePos.Y - 36)
        MainFrame.Size = UDim2.new(0, newX, 0, newY)
    end
end)
game:GetService("UserInputService").InputEnded:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then draggingResize = false end end)
